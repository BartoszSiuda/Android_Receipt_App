<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:layout_marginTop="105dp"
    tools:context=".FirstFragment"
    android:padding="20dp"
    android:background="@drawable/title_of_the_receipt_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_of_nalesniki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/real_image"
            android:background="@drawable/image_input_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/receipt_title"
        android:layout_width="310dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="@string/Title_of_the_receipt"
        android:textColor="@color/black"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/description_receipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Recepit"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/receipt_title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/creationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Added_date"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/receipt_title"
        android:textSize="13sp" />

</androidx.constraintlayout.widget.ConstraintLayout>