<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    tools:context=".FirstFragment"
    android:padding="20dp"
    android:background="@drawable/title_of_the_receipt_background">

    <ImageView
        android:background="@drawable/image_input_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/greenbackgroundtext"
        android:layout_width="310dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="@string/Title_of_the_receipt"
        android:textColor="@color/black"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Recepit"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/greenbackgroundtext"
        android:textSize="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>