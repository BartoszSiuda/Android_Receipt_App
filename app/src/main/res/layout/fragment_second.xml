<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/greenbackgroundtext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#00C851"
        android:gravity="center"
        android:text="@string/greenbackgroundtext"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/Title1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:background="@drawable/text_input_background"
        android:paddingStart="10dp"
        android:hint="@string/Title"
        android:textColor="#777777"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenbackgroundtext" />

    <EditText
        android:id="@+id/Description1"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/text_input_background"
        android:gravity="top"
        android:hint="@string/Start_typing_receipt_text..."
        android:textColor="#777777"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Title1" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#00C851"
        android:text="@string/CONFIRM"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Description1" />

</androidx.constraintlayout.widget.ConstraintLayout>